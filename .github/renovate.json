{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":disablePeerDependencies",
    "npm:unpublishSafe"
  ],
  "timezone": "Etc/UTC",
  "schedule": [
    "* 0-4 * * 1-3"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "bump up",
  "commitMessageTopic": "{{depName}} version",
  "ignoreDeps": []
}
